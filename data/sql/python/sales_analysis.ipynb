import pandas as pd
import matplotlib.pyplot as plt

# Load data
df = pd.read_csv("../data/raw_data.csv")

# Show first rows
df.head()
# Convert date column
df['order_date'] = pd.to_datetime(df['order_date'])

# Basic KPIs
total_revenue = df['payment_value'].sum()
total_orders = df['order_id'].nunique()
total_customers = df['customer_id'].nunique()

total_revenue, total_orders, total_customers
# Monthly Revenue Trend
monthly_sales = df.groupby(df['order_date'].dt.to_period('M'))['payment_value'].sum()

monthly_sales.plot(kind='line', title='Monthly Revenue Trend')
plt.xlabel('Month')
plt.ylabel('Revenue')
plt.show()
# Top Products
top_products = df.groupby('product')['payment_value'].sum().sort_values(ascending=False)

top_products.plot(kind='bar', title='Revenue by Product')
plt.xlabel('Product')
plt.ylabel('Revenue')
plt.show()
# Save cleaned data
df.to_csv("../data/cleaned_data.csv", index=False)
